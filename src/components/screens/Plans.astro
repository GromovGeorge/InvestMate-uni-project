---

<section class='homepage__plans-section mb-[200px]'>
  <h2 class='text-[60px] font-bold text-center'>Тарифные планы</h2>
  <div class='grid-plans'>
    {plans.map((p) => <PlanCard type={p.type} price={p.price} data={p.data} />)}
  </div>
</section>

<style lang='scss'>
  .grid-plans {
    display: grid;
    grid-template: auto / repeat(3, 1fr);
    gap: 24px;

    margin-top: 100px;
  }
</style>
